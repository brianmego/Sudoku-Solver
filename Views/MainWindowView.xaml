<Window x:Class="Sudoku_Solver.MainWindow"
        xmlns:local="clr-namespace:Sudoku_Solver.Views"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <local:SolveGridView />
        </Grid>
        
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Content="Solve" />
        <Button Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Content="Clear" />
        <Button Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" Content="Exit" />
    </Grid>
</Window>
